@model Scaffolding.Models.Students

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Students</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StuId" />
            <div class="form-group">
                <label asp-for="StuName" class="control-label"></label>
                <input asp-for="StuName" class="form-control" />
                <span asp-validation-for="StuName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StuEmail" class="control-label"></label>
                <input asp-for="StuEmail" class="form-control" />
                <span asp-validation-for="StuEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StuPhone" class="control-label"></label>
                <input asp-for="StuPhone" class="form-control" />
                <span asp-validation-for="StuPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StuCity" class="control-label"></label>
                <input asp-for="StuCity" class="form-control" />
                <span asp-validation-for="StuCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

